name = DrupalCamp 2014
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]      = 'Navigation'
regions[header]          = 'Top Bar'
regions[highlighted]     = 'Highlighted'
regions[help]            = 'Help'
regions[content_top]         = 'Content Top'
regions[content]         = 'Content'
regions[content_bottom]  = 'Content Bottom'

regions[triptych_one]    = 'Triptych Column One'
regions[triptych_two]    = 'Triptych Column Two'
regions[triptych_three]  = 'Triptych Column Three'

regions[sidebar_first]   = 'Sidebar First'
regions[sidebar_second]  = 'Sidebar Second'

regions[footer]          = 'Footer'
regions[footer_one]      = 'Footer Column One'
regions[footer_two]      = 'Footer Column Two'
regions[footer_three]    = 'Footer Column Three'
regions[footer_four]     = 'Footer Column Four'

regions[page_top]        = 'Page top'
regions[page_bottom]     = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = js/bdc2014.js


